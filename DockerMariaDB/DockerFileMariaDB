FROM mariadb:latest

#ENV TIMEZONE Europe/Moscow

RUN rm -rf /var/lib/mysql/* \
&& rm /etc/mysql/conf.d/mariadb.cnf \ 
&& ln -fs /usr/share/zoneinfo/Europe/Moscow /etc/localtime \
&& ln -fs /dev/stdout /var/mysql/mysql_slow.log \
&& ln -fs /dev/stderr /var/mysql/mysql_error.log
#&& timedatectl set-timezone Europe/Moscow 
 
COPY ./my.cnf /etc/mysql/my.cnf
COPY ./conf.d/client.cnf /etc/mysql/conf.d/client.cnf
COPY ./conf.d/server.cnf /etc/mysql/conf.d/server.cnf

EXPOSE 3306
#CMD ls /var/log/mysql
