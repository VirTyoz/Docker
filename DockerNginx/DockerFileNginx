FROM nginx:latest

RUN ln -fs /usr/share/zoneinfo/Europe/Moscow /etc/localtime \
&& ln -fs /dev/stdout /var/log/nginx/modx.acess.log \
&& ln -fs /dev/stderr /var/log/nginx/modx.error.log \
&& ln -fs /dev/stdout /var/log/nginx/holidays.acess.log \
&& ln -fs /dev/stderr /var/log/nginx/holidays.error.log \
&& ln -fs /dev/stdout /var/log/nginx/tools.acess.log \
&& ln -fs /dev/stderr /var/log/nginx/tools.error.log \
&& ln -fs /dev/stdout /var/log/nginx/zabbix.access.log \
&& ln -fs /dev/stderr /var/log/nginx/zabbix.error.log
#&& timedatectl set-timezone Europe/Moscow

#COPY ./www-data /code
COPY ./conf.d /etc/nginx/conf.d
COPY ./nginx.conf /etc/nginx/nginx.conf
#CMD nginx -g daemon off
